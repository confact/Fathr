<?xml version="1.0" encoding="UTF-8"?>
<phpunit 
    bootstrap="./bootstrap.php" 
    colors="true">
	
	<testsuites>
    	<testsuite name="Fathr Test Suite">
	       	 <directory suffix="Test.php">./system</directory>    
        </testsuite>
	</testsuites>
    
    <logging>
        <log type="coverage-html" 
            target="./log/report" 
            charset="UTF-8" 
            yui="true" 
            highlight="true" 
            lowUpperBound="50" 
            highLowerBound="80" />
        <log type="testdox-html" target="./log/testdox.html" />
    </logging>
</phpunit>